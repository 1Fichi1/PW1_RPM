@model List<dynamic>
@{
    ViewData["Title"] = "Каталог";
}

<h1>Каталог товаров</h1>
<div class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
            <h2 class="product-title">@product.Name</h2>
            <p class="product-description">@product.Description</p>
            <p class="product-price">Цена: @product.Price руб.</p>
            <button class="add-to-cart">Добавить в корзину</button>

            <!-- Кнопка для переключения окна отзывов -->
            <button class="toggle-reviews" onclick="toggleReviews(this)">Посмотреть отзывы</button>

            <!-- Секция для отзывов -->
            <div class="review-section" style="display: none;">
                <div class="review-list">
                    <div class="review-item">Отзыв от пользователя 1: Отличный товар!</div>
                    <div class="review-item">Отзыв от пользователя 2: Качество на высоте!</div>
                </div>
                <!-- Форма для добавления нового отзыва -->
                <div class="review-form">
                    <h3>Оставить отзыв</h3>
                    <textarea placeholder="Напишите ваш отзыв..."></textarea>
                    <button class="submit-review">Отправить отзыв</button>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function toggleReviews(button) {
        const reviewSection = button.nextElementSibling;
        if (reviewSection.style.display === "none") {
            reviewSection.style.display = "block";
            button.textContent = "Скрыть отзывы";
        } else {
            reviewSection.style.display = "none";
            button.textContent = "Посмотреть отзывы";
        }
    }
</script>
